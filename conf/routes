# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index

GET     /cadastrar                  controllers.HomeController.cadastrarFilme

+nocsrf
POST    /cadastrar                  controllers.HomeController.exibirCadastrar

GET     /listar                     controllers.HomeController.listar

GET    /remover/:filme                    controllers.HomeController.remover(filme : Int)
GET    /assistido/:filme                    controllers.HomeController.assistido(filme : Int)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
